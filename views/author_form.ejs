<%- include("../views/layout.ejs") %>
<h1><%= title %></h1>

<form action="" method="post">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input
      type="text"
      id="first_name"
      class="form-control"
      placeholder="First name (Christian) last"
      name="first_name"
      required="true"
      value="<%= locals.author === undefined ? '' : author.first_name %>"
    />
    <input
      type="text"
      id="family_name"
      class="form-control"
      placeholder="Family name (surname)"
      name="family_name"
      required="true"
      value="<%= locals.author === undefined ? '' : author.family_name %>"
    />
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of Birth:</label>
    <input
      type="date"
      id="date_of_birth"
      class="form-control"
      name="date_of_birth"
      value="<%= locals.author === undefined ? '' : author.date_of_birth %>"
    />
  </div>
  <div class="form-group">
    <label for="date_of_death">Date of Death:</label>
    <input
      type="date"
      id="date_of_death"
      class="form-control"
      name="date_of_death"
      value="<%= locals.author === undefined ? '' : author.date_of_death %>"
    />
  </div>
  <button class="btn btn-primary">Submit</button>
</form>
<% if (locals.errors) { %>
<ul>
  <% locals.errors.forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
